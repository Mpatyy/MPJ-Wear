{% extends 'admin/base.html.twig' %}
{% block title %}Productos{% endblock %}

{% block body %}
<h1>Productos</h1>
<a href="{{ path('admin_productos_nuevo') }}" class="btn btn-primary mb-3">Nuevo Producto</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock / Variaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for producto in productos %}
        <tr>
            <td>{{ producto.id }}</td>
            <td>{{ producto.nombre }}</td>
            <td>{{ producto.precio }}â‚¬</td>

            <td>
                {% for variacion in producto.variaciones %}
                    {{ variacion.stock }} ({{ variacion.talla }}/{{ variacion.color }})<br>
                {% endfor %}
            </td>

            <td>
                <a href="{{ path('admin_productos_editar', {'id': producto.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                <a href="{{ path('admin_productos_eliminar', {'id': producto.id}) }}" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
