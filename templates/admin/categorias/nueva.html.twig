{% extends 'admin/base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Nueva categoría{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">Nueva categoría</h1>
        <div class="text-muted small">Crea una categoría con su slug.</div>
    </div>
    <a href="{{ path('admin_categorias_list') }}" class="btn btn-outline-secondary btn-sm">← Volver</a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.nombre) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.slug) }}
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button class="btn btn-dark">Guardar categoría</button>
                <a href="{{ path('admin_categorias_list') }}" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
