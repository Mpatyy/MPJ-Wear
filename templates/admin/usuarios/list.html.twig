{% extends 'admin/base.html.twig' %}
{% block title %}Usuarios{% endblock %}
{% block body %}
<h1>Usuarios</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for usuario in usuarios %}
        <tr>
            <td>{{ usuario.id }}</td>
            <td>{{ usuario.nombre }}</td>
            <td>{{ usuario.email }}</td>
            <td>
                <a href="{{ path('admin_usuarios_ver', {'id': usuario.id}) }}" class="btn btn-primary btn-sm">Ver</a>
                <a href="{{ path('admin_usuarios_eliminar', {'id': usuario.id}) }}" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
