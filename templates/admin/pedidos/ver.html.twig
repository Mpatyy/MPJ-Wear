{% extends 'admin/base.html.twig' %}

{% block title %}Ver Pedido #{{ pedido.id }}{% endblock %}

{% block body %}
<h1>Pedido #{{ pedido.id }}</h1>

<p><strong>Usuario:</strong> {{ pedido.usuario.nombre }}</p>
<p><strong>Estado:</strong> {{ pedido.estado }}</p>
<p><strong>Total:</strong> {{ pedido.total }} €</p>

<h2>Líneas del pedido</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Variación</th>
            <th>Cantidad</th>
            <th>Precio unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        {% for linea in lineas %}
        <tr>
            <td>{{ linea.producto.nombre }}</td>
            <td>{{ linea.talla }} - {{ linea.color }}</td>
            <td>{{ linea.cantidad }}</td>
            <td>{{ linea.precioUnitario }} €</td>
            <td>{{ linea.subtotal }} €</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('admin_pedidos_list') }}" class="btn btn-secondary mt-3">Volver a pedidos</a>
{% endblock %}
