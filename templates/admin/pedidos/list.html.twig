{% extends 'admin/base.html.twig' %}
{% block title %}Pedidos{% endblock %}
{% block body %}
<h1>Pedidos</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for pedido in pedidos %}
        <tr>
            <td>{{ pedido.id }}</td>
            <td>{{ pedido.usuario.getEmail() }}</td>
            <td>{{ pedido.total }}â‚¬</td>
            <td>{{ pedido.estado }}</td>
            <td>
                <a href="{{ path('admin_pedidos_ver', {'id': pedido.id}) }}" class="btn btn-primary btn-sm">Ver</a>
                <a href="{{ path('admin_pedidos_cambiar_estado', {'id': pedido.id, 'estado': 'pagado'}) }}" class="btn btn-primary btn-sm">Marcar pagado</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
