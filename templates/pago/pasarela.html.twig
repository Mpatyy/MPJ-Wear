{% extends 'base.html.twig' %}

{% block title %}Pasarela de pago{% endblock %}

{% block body %}
<h1 class="mb-4">Pago seguro</h1>

{% for message in app.flashes('error') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}

<form action="{{ path('pago_procesar') }}" method="post" class="col-md-6">

    <div class="mb-3">
        <label class="form-label">NÃºmero de tarjeta</label>
        <input type="text"
               name="numero_tarjeta"
               class="form-control"
               maxlength="16"
               pattern="\d{16}"
               required>
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de caducidad (MM/YY)</label>
        <input type="text"
               name="fecha_caducidad"
               class="form-control"
               placeholder="MM/YY"
               pattern="\d{2}/\d{2}"
               required>
    </div>

    <div class="mb-3">
        <label class="form-label">CVV</label>
        <input type="password"
               name="cvv"
               class="form-control"
               maxlength="3"
               pattern="\d{3}"
               required>
    </div>

    <button type="submit" class="btn btn-success">
        Pagar
    </button>
</form>
{% endblock %}
