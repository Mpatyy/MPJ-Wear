{% extends 'base.html.twig' %}

{% block title %}Listado de Productos{% endblock %}

{% block body %}
    <h1 class="mb-4">Productos</h1>

    {# Filtro de categorías #}
    {% if categorias is defined and categorias is not empty %}
        <div class="d-flex flex-wrap gap-2 mb-4">
            <a
                class="btn btn-outline-dark {% if slugActiva is empty %}active{% endif %}"
                href="{{ path('producto_listado') }}"
            >
                Ver todo
            </a>

            {% for cat in categorias %}
                <a
                    class="btn btn-outline-dark {% if slugActiva == cat.slug %}active{% endif %}"
                    href="{{ path('producto_listado') }}?categoria={{ cat.slug }}"
                >
                    {{ cat.nombre }}
                </a>
            {% endfor %}
        </div>
    {% endif %}

    {% if productos is not empty %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-3">
            {% for producto in productos %}
                <div class="col">
                    <div class="card h-100">
                        {% if producto.imagen %}
                            <img
                                src="{{ asset('images/' ~ producto.imagen) }}"
                                class="card-img-top"
                                alt="Imagen de {{ producto.nombre }}"
                            >
                        {% endif %}

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ producto.nombre }}</h5>
                            <p class="card-text fw-bold mb-3">
                                {{ producto.precio }} €
                            </p>

                            <a
                                href="{{ path('producto_detalle', {'id': producto.id}) }}"
                                class="btn btn-primary mt-auto"
                            >
                                Ver detalle
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            No hay productos disponibles.
        </div>
    {% endif %}
{% endblock %}
