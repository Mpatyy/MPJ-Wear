{% extends 'base.html.twig' %}

{% block title %}Mi área{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row">
        {# Columna izquierda: datos básicos y menú #}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-dark text-white">
                    <h2 class="h6 mb-0">Mi perfil</h2>
                </div>
                <div class="card-body">
                    {% if app.user %}
                        <p><strong>Nombre:</strong> {{ app.user.nombre }}</p>
                        <p><strong>Email:</strong> {{ app.user.email }}</p>
                        <p><strong>Teléfono:</strong> {{ app.user.telefono }}</p>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            No has iniciado sesión.
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="h6 mb-0">Mi cuenta</h2>
                </div>
                <div class="list-group list-group-flush">
    <a href="{{ path('perfil') }}" class="list-group-item list-group-item-action active">
        Perfil y pedidos
    </a>

    <a href="{{ path('mis_direcciones') }}" class="list-group-item list-group-item-action">
        Mis direcciones
    </a>

    <span class="list-group-item text-muted">
        Métodos de pago (pendiente)
    </span>

    <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action text-danger">
        Cerrar sesión
    </a>
</div>

            </div>
        </div>

        {# Columna derecha: resumen + tabla de pedidos #}
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="h6 mb-1">Resumen de tu cuenta</h2>
                        <p class="text-muted mb-0">
                            Tienes {{ pedidos|length }} pedidos registrados.
                        </p>
                    </div>
                    <div class="text-end">
                        {# Si en el controlador calculas totalGastado, pásalo a la vista #}
                        {% if totalGastado is defined %}
                            <div class="fs-5">{{ totalGastado|number_format(2, ',', '.') }} €</div>
                            <div class="text-muted small">Importe total de tus pedidos</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="h6 mb-0">Historial de pedidos</h2>
                </div>
                <div class="card-body">
                    {% if pedidos is empty %}
                        <p class="text-muted mb-0">Todavía no has realizado ningún pedido.</p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-sm align-middle">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for pedido in pedidos %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('perfil_pedido_detalle', {'id': pedido.id}) }}">
                                                    {{ pedido.id }}
                                                </a>
                                            </td>
                                            <td>{{ pedido.fecha|date('d/m/Y H:i') }}</td>
                                            <td>{{ pedido.estado }}</td>
                                            <td>{{ pedido.total }} €</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
