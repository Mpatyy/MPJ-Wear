{% extends 'base.html.twig' %}

{% block title %}Mi perfil{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h2 class="h5 mb-0">Mi perfil</h2>
                </div>
                <div class="card-body">
                    {% if app.user %}
                        <p><strong>Nombre:</strong> {{ app.user.nombre }}</p>
                        <p><strong>Email:</strong> {{ app.user.email }}</p>
                        <p><strong>Teléfono:</strong> {{ app.user.telefono }}</p>
                    {% else %}
                        <div class="alert alert-warning">
                            No has iniciado sesión.
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="h6 mb-0">Historial de pedidos</h2>
                </div>
                <div class="card-body">
                    {% if pedidos is empty %}
                        <p class="text-muted mb-0">Todavía no has realizado ningún pedido.</p>
                    {% else %}
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
    {% for pedido in pedidos %}
        <tr>
            <td>
                <a href="{{ path('perfil_pedido_detalle', {'id': pedido.id}) }}">
                    {{ pedido.id }}
                </a>
            </td>
            <td>{{ pedido.fecha|date('d/m/Y H:i') }}</td>
            <td>{{ pedido.estado }}</td>
            <td>{{ pedido.total }} €</td>
        </tr>
    {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
