<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title>
			{% block title %}Mi Tienda MPJ
			{% endblock %}
		</title>

		{# Bootstrap CSS por CDN #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					<a class="navbar-brand" href="{{ path('producto_listado') }}">Mi Tienda MPJ</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMPJ">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarMPJ">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('producto_listado') }}">Productos</a>
							</li>
							<li class="nav-item">
								{% set carrito = app.session.get('carrito', []) %}
								{% set totalCarrito = 0 %}
								{% for item in carrito %}
									{% set totalCarrito = totalCarrito + item.cantidad %}
								{% endfor %}

								<a class="nav-link" href="{{ path('carrito_ver') }}">
									Carrito
									{% if totalCarrito > 0 %}
										<span class="badge bg-danger ms-1">{{ totalCarrito }}</span>
									{% endif %}
								</a>
							</li>
						</ul>

						<div class="d-flex">
							{% if app.user %}
								<span class="navbar-text me-3">
									Hola,
									{{ app.user.nombre }}
									({{ app.user.email }})
								</span>
							{% else %}
								<a class="btn btn-outline-light" href="{{ path('app_login') }}">Iniciar sesión</a>
							{% endif %}
						</div>
					</div>
				</div>
			</nav>

			<div class="container mt-4 mb-4">
				<div id="react-buscador-avanzado"></div>
			</div>
		</header>

		<main class="container mt-4"> {% block body %}{% endblock %}
			</main>

			<footer class="text-center mt-4 mb-4">
				<p>© 2025 Mi Tienda MPJ - Todos los derechos reservados</p>
			</footer>

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}

			{# Bootstrap JS por CDN #}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		</body>
	</html>
