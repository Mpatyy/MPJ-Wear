{% extends 'base.html.twig' %}

{% block title %}Métodos de Pago{% endblock %}

{% block body %}
<h1 class="mb-4">Métodos de Pago</h1>

<h3>Tarjetas guardadas</h3>
{% if tarjetas is empty %}
    <p>No tienes tarjetas guardadas.</p>
{% else %}
    <ul class="list-group mb-4">
        {% for tarjeta in tarjetas %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                **** **** **** {{ tarjeta.numero|slice(-4) }} — {{ tarjeta.caducidad|date('m/Y') }}
                <a href="{{ path('eliminar_tarjeta', {id: tarjeta.id}) }}" class="btn btn-danger btn-sm">Eliminar</a>
            </li>
        {% endfor %}
    </ul>
{% endif %}

<h3>Guardar nueva tarjeta</h3>
{{ form_start(form) }}
{{ form_widget(form) }}
<button class="btn btn-primary mt-2">Guardar tarjeta</button>
{{ form_end(form) }}

{% endblock %}
